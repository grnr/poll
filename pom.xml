<project>
  <!--
    A sample Maven pom.xml file.
  -->
  <modelVersion>4.0.0</modelVersion>
  <name>Maven Default Project</name>
  
  <!--
    The Maven settings for artifacts generated by this project.
  -->
  <groupId>com.mycompany.app</groupId>
  <artifactId>artifactfile</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  
  <!--
    The source code location.
    This is used by the Maven release plug-in to tag commits after builds.
  -->
  <scm>
    <url>http://github.com/grnr/poll</url>
    <connection>scm:git:http://github.com/grnr/poll</connection>
    <developerConnection>scm:git:http://github.com/grnr/poll</developerConnection>
  </scm>
  
  <!--
    The location that artifacts are upload to when we run the Maven release goal.
  -->
  <distributionManagement>
   <repository>
      <id>releases</id>
        <name>testrepo-releases</name>
          <url>
            dav:http://nexus.localhost.localdomain/nexus/content/repositories/testrepo-releases
          </url>
   </repository>
   <snapshotRepository>
      <id>snapshots</id>
        <name>testrepo-snapshots</name>
          <url>
            dav:http://nexus.localhost.localdomain/nexus/content/repositories/testrepo-snapshots
          </url>
   </repository>
</distributionManagement>

<build>
  
  <!--
    This extension allows Maven to upload artifacts to webdav enabled servers.
  -->
  <extension>
    <groupId>org.apache.maven.wagon</groupId>
    <artifactId>wagon-webdav-rackrabbit</artifactId>
    <version>2.2</version>
  </extension>
</build>
</project>
